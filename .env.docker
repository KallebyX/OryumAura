# ====================================================================
# OryumAura - Docker Environment Variables
# ====================================================================
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3001

# Database (PostgreSQL)
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=oryumaura
DB_USER=oryumaura
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# JWT Configuration (CRITICAL - Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_32_MINIMUM_32_CHARS
JWT_EXPIRATION=15m

# CORS
CORS_ORIGIN=https://yourdomain.com

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
